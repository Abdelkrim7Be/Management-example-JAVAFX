<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.project.presentation.javafx.controllers.EntrepriseController">

    <!-- Header Section -->
    <top>
        <HBox spacing="10" alignment="CENTER" style="-fx-padding: 10; -fx-background-color: #2A2A2A;">
            <Label text="Entreprise Management" style="-fx-font-size: 18; -fx-text-fill: white;" />
        </HBox>
    </top>

    <!-- Main Content Section -->
    <center>
        <VBox spacing="15" style="-fx-padding: 20;">

            <!-- Form Section -->
            <GridPane hgap="10" vgap="10">
                <Label text="Name:" />
                <TextField fx:id="txtName" GridPane.columnIndex="1" />

                <Label text="Address:" GridPane.rowIndex="1" />
                <TextField fx:id="txtAddress" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label text="Phone:" GridPane.rowIndex="2" />
                <TextField fx:id="txtPhone" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                <Label text="Email:" GridPane.rowIndex="3" />
                <TextField fx:id="txtEmail" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            </GridPane>

            <!-- Button Section -->
            <HBox spacing="10" alignment="CENTER">
                <Button text="Add" fx:id="btnAdd" />
                <Button text="Update" fx:id="btnUpdate" />
                <Button text="Delete" fx:id="btnDelete" />
            </HBox>
        </VBox>
    </center>

    <!-- Table Section -->
    <bottom>
        <TableView fx:id="tblEnterprises" style="-fx-padding: 10;">
            <columns>
                <TableColumn text="ID" fx:id="colId" />
                <TableColumn text="Name" fx:id="colName" />
                <TableColumn text="Address" fx:id="colAddress" />
                <TableColumn text="Phone" fx:id="colPhone" />
                <TableColumn text="Email" fx:id="colEmail" />
            </columns>
        </TableView>
    </bottom>
</BorderPane>
